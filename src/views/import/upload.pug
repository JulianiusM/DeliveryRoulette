extends ../layout

block meta
    title Import | DeliveryRoulette

block title
    h1.card-header.text-center
        i.bi.bi-upload.me-2
        | Import Restaurants

block content
    .row.justify-content-center
        .col-md-8
            p.text-white-50.mb-4
                | Upload a JSON or CSV file to import restaurants, menus, and provider references.
                | The file will be validated and a preview of changes will be shown before applying.

            form(method="POST" action="/import/upload" enctype="multipart/form-data")
                .mb-3
                    label.form-label(for="file") Import File (JSON or CSV)
                    input.form-control.text-bg-dark(type="file" name="file" id="file" accept=".json,.csv,application/json,text/csv" required)
                    .form-text.text-white-50 Accepted formats: JSON (full import) or CSV (restaurant list only). See #[a.text-info(href="/help") documentation] for details.

                .d-grid
                    button.btn.btn-primary(type="submit")
                        i.bi.bi-cloud-upload.me-1
                        | Upload &amp; Validate
