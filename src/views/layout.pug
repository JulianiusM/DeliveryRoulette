//- views/layout.pug – Main layout for DeliveryRoulette
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        block meta

        //── CSS ────────────────────────────────────────────────────
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        block link

    body(class="d-flex flex-column min-vh-100 bg-secondary")

        //── Navbar ────────────────────────────────────────────────────
        header
            nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.shadow-sm
                .container
                    a.navbar-brand.d-flex.align-items-center(href="/")
                        i.bi.bi-shuffle.me-2
                        span.fw-semibold Delivery Roulette

                    button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarMain", aria-controls="navbarMain", aria-expanded="false", aria-label="Toggle navigation")
                        span.navbar-toggler-icon

                    .collapse.navbar-collapse#navbarMain
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(href="/")
                                    i.bi.bi-house-door.me-1
                                    | Home

        //── Main Content ───────────────────────────────────────────────
        main.container-fluid.flex-grow-1.py-3
            block body
                .card.bg-dark.text-white.mb-3
                    block title
                    .card-body
                        block content

        //── Footer ────────────────────────────────────────────────────
        footer.bg-dark.text-white.text-center.py-2.mt-auto
            small
                | Delivery Roulette v#{version}

        //── JavaScript ────────────────────────────────────────────────
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        block scripts
